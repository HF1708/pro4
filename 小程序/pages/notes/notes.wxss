/** list.wxss **/

.item-container {
  margin: 10rpx 20rpx;
  position: relative;
}

.cover {
  width: 100%;
  height: 400rpx;
  display: block;
  border-radius:6%;
}

.desc {
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #E5E7ED;
}

.left {
  position:absolute;
  top:30rpx;
  left:10rpx;
}

.right {
  display: block;
  position: absolute;
  bottom:40rpx;
  left:10rpx;
  flex-direction: column;
  align-items: center;
}

.edit{
  display: inline-block;
  position:absolute;
  top:10rpx;
  left:75rpx;
  width:200rpx;
}

.right image{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
