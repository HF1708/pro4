<!--mark.wxml-->

<navigator wx:for="{{notes}}" class="item-container" url="../item/item?id={{item.sid}}">
  <image mode="aspectFit" src="http://m.chanyouji.cn/index-cover/64695-2679221.jpg?imageView2/1/w/620/h/330/format/jpg" class="cover"></image>
    <view  class="left">
      <view style="font-size:40rpx;margin:10rpx 0;color:white;font-weight:bold;">{{item.title}}</view>
      <view style="font-size:24rpx;color:white">{{item.edittime}}</view>
    </view>
    <view class="right">
      <image mode="aspectFit" src="{{item.user_image}}"></image>
      <view class='edit' style="font-size:22rpx;margin-top:10rpx;color:white">by {{item.user_name}}</view>
    </view>

</navigator>
